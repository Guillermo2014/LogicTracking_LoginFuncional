@model IEnumerable<Login_LogicTrack.Models.Solicitante>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout2.cshtml";
}

<link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />

<h1>Solicitudes</h1>
<br />
<p>
    <a href="/Solicitante/Create"><input type="button" class="btn btn-primary" value="Crear solicitud"></a>
</p>
<div style="overflow-x:auto;">
