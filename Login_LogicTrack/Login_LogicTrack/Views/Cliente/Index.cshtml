@model IEnumerable<Login_LogicTrack.Models.Cliente>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout2.cshtml";
}

<h1>Clientes</h1>
<br />
<p>
    <!--<a asp-action="Create">Agregar</a>-->
    <!--<button asp-action="Create">Agregar</button>-->
    <a href="/Cliente/Create"><input type="button" class="btn btn-primary" value="Crear cliente"></a>
</p>

<div style="overflow-x:auto;">
    <table class="table table-bordered table-sm table-striped" cellspacing="0" width="120%">
        <thead class="table-dark text-center">
            <tr class="text-center">
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.movil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cargo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.empresa.razonSocial)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.ActionLink(item.id.ToString(), "Details", new { id = item.id }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.movil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.empresa.razonSocial)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>