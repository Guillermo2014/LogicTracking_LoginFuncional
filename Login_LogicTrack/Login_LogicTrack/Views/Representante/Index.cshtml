@model IEnumerable<Login_LogicTrack.Models.Representante>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout2.cshtml";
}

<h1>Representantes</h1>
<br />
<p>
    <a href="/Representante/Create"><input type="button" class="btn btn-primary" value="Crear representante"></a>
</p>
<div style="overflow-x:auto;">
    <table class="table table-bordered table-sm table-striped" cellspacing="0" width="120%">
        <thead class="table-dark text-center">
            <tr class="text-center">
                <th>
                    @Html.DisplayNameFor(model => model.idRepresentante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaCreacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefonoMovil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cargo)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.ActionLink(item.idRepresentante.ToString(), "Details", new { id = item.idRepresentante }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaCreacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefonoMovil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cargo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>